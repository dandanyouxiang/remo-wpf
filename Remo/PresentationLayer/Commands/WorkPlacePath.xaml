<Window x:Class="PresentationLayer.WorkPlacePath"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WorkPlacePath" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <Label Margin="5,15,5,5" Content="WorkPlace"></Label>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox Margin="20,5,5,5" Name="WorkPlaceTextBox" Width="200"></TextBox>
                <Button  Margin="5" Content="..." Width="40" Click="Button_Click"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Button Margin="60,5,5,5" Content="Ok" Width="80" IsDefault="True" Click="ButtonOK_Click"></Button>
                <Button  Margin="5" Content="Cancel" Width="80" IsCancel="True"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
