<UserControl x:Class="DNBSoft.WPF.WPFGraph.WPFGraphConfigurationBrushProperty"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Label Name="nameLabel" VerticalAlignment="Center" Grid.Column="0">
            Property Name
        </Label>
        <Border BorderBrush="Black" BorderThickness="0.5" Grid.Column="1" VerticalAlignment="Center">
            <Canvas Name="previewCanvas" Width="50" Height="24" Background="White"/>    
        </Border>
        <Button Grid.Column="3" Margin="1,1,0,1" Name="configureButton" Click="configureButton_Click">
            Configure
        </Button>
    </Grid>
</UserControl>
